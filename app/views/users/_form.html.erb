<%if @user.errors.any?%>
    <ul>
        <%@user.errors.full_messages.each do |msg|%>
            <li><%= msg %></li>
        <%end%>
    </ul>
<%end%>

<%= form_with(model: @user, local: true)  do |f| %>
    <p>
        <%=f.label :first_name%><br/>
        <%=f.text_field :first_name%>
    </p>
    <p>
        <%=f.label :last_name%><br/>
        <%=f.text_area :last_name%>
    </p>

    <p>
        <%=f.label :address%><br/>
        <%=f.text_area :address%>
    </p>

    <p>
        <%=f.label :phone_no%><br/>
        <%=f.text_field :phone_no%>
    </p>

    <p>
        <%=f.submit%><br/>
    </p>
<%end%>